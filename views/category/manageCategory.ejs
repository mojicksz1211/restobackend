<!-- ============================================ -->
<!-- CATEGORY MANAGEMENT PAGE -->
<!-- File: views/category/manageCategory.ejs -->
<!-- Description: Main page for managing categories -->
<!-- ============================================ -->

<%- include('../partials/header') %>
<%- include('../partials/loader') %>
	<%- include('../partials/sidebar') %>

		<%- include('../partials/topbar') %>

			<div class="container-fluid content-inner mt-4">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header d-flex justify-content-between align-items-center">
								
								<h3 class="card-title"><div class="breadcrumb1 flat">
									<a href="/dashboard" ><span class="fa fa-home"></span></a>
									<a href="/manageCategory"class="active"><%= __('category.manage_category') %></a>
								</div></h3>
									<button type="button" class="btn btn-primary" onclick="add_category_modal()">
										<i class="fa fa-plus" aria-hidden="true"></i> <%= __('category.new_category') %>
									</button>
								
							</div>


							<div class="card-body">
																
								<table id="categoryTable" class="table  nowrap small-text" style="width:100%">
									<thead>
										<tr>
											<th class="d-none d-sm-table-cell"><%= __('category.category_name') %></th>
											<th class="d-none d-sm-table-cell"><%= __('category.description') %></th>
											<th class="d-none d-sm-table-cell"><%= __('category.date_created') %></th>
											<th class="d-none d-sm-table-cell"><%= __('category.action') %></th>
										</tr>
									</thead>
									<tbody>

									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>


			<!-- ============================================ -->
			<!-- MODALS -->
			<!-- ============================================ -->
			<%- include ('../modals/category/new_category'); %>
			<%- include ('../modals/category/edit_category'); %>

			<!-- ============================================ -->
			<!-- FOOTER -->
			<!-- ============================================ -->
			<%- include ('../partials/footer'); -%>

			<!-- Translations passed via data attribute to avoid linter issues -->
			<div id="manageCategoryTranslations" 
				data-success="<%- __('category.success') %>"
				data-error="<%- __('category.error') %>"
				data-category-created-successfully="<%- __('category.category_created_successfully') %>"
				data-category-updated-successfully="<%- __('category.category_updated_successfully') %>"
				data-category-deleted-successfully="<%- __('category.category_deleted_successfully') %>"
				data-failed-to-create-category="<%- __('category.failed_to_create_category') %>"
				data-failed-to-update-category="<%- __('category.failed_to_update_category') %>"
				data-failed-to-delete-category="<%- __('category.failed_to_delete_category') %>"
				data-failed-to-load-categories="<%- __('category.failed_to_load_categories') %>"
				data-delete-confirmation-title="<%- __('category.delete_confirmation_title') %>"
				data-delete-confirmation-text="<%- __('category.delete_confirmation_text') %>"
				data-delete-confirm-button="<%- __('category.delete_confirm_button') %>"
				data-no-description="<%- __('category.no_description') %>"
				style="display: none;"></div>

			<!-- ============================================ -->
			<!-- SCRIPTS -->
			<!-- ============================================ -->
			<script src="/assets/js/functions/manageCategory.js"></script>

			<style>
				.card-body {
					overflow-x: auto;
				}
				#categoryTable {
					width: 100%;
					font-size: 13px;
					border-collapse: collapse;
				}

				/* Header styles */
				#categoryTable thead th {
					background: var(--bs-primary-bg-subtle);
					color: var(--bs-primary);
					font-weight: 500;
					padding: 12px 15px;
					text-align: left;
					border: none;
				}

				/* Row styles */
				#categoryTable tbody tr {
					border-bottom: 1px solid #eee;
				}

				/* Cell styles */
				#categoryTable td {
					padding: 12px 15px;
					color: #666;
				}

				#categoryTable tbody tr:hover {
					background-color: #f5f5f5 !important;
				}
			</style>

