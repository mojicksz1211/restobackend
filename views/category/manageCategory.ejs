<%- include('../partials/header') %>
<%- include('../partials/loader') %>
	<%- include('../partials/sidebar') %>

		<%- include('../partials/topbar') %>

			<div class="container-fluid content-inner mt-4">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header d-flex justify-content-between align-items-center">
								
								<h3 class="card-title"><div class="breadcrumb1 flat">
									<a href="/dashboard" ><span class="fa fa-home"></span></a>
									<a href="/manageCategory"class="active">Manage Category</a>
								</div></h3>
									<button type="button" class="btn btn-primary" onclick="add_category_modal()">
										<i class="fa fa-plus" aria-hidden="true"></i> New Category
									</button>
								
							</div>


							<div class="card-body">
																
								<table id="categoryTable" class="table  nowrap small-text" style="width:100%">
									<thead>
										<tr>
											<th class="d-none d-sm-table-cell">Category Name</th>
											<th class="d-none d-sm-table-cell">Description</th>
											<th class="d-none d-sm-table-cell">Date Created</th>
											<th class="d-none d-sm-table-cell">Action</th>
										</tr>
									</thead>
									<tbody>

									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>


			<!-- ============================================ -->
			<!-- MODALS -->
			<!-- ============================================ -->
			<%- include ('../modals/category/new_category'); %>
			<%- include ('../modals/category/edit_category'); %>

			<!-- ============================================ -->
			<!-- FOOTER -->
			<!-- ============================================ -->
			<%- include ('../partials/footer'); -%>

			<!-- ============================================ -->
			<!-- SCRIPTS -->
			<!-- ============================================ -->
			<script src="/assets/js/functions/manageCategory.js"></script>

			<style>
				.card-body {
					overflow-x: auto;
				}
				#categoryTable {
					width: 100%;
					font-size: 13px;
					border-collapse: collapse;
				}

				/* Header styles */
				#categoryTable thead th {
					background: var(--bs-primary-bg-subtle);
					color: var(--bs-primary);
					font-weight: 500;
					padding: 12px 15px;
					text-align: left;
					border: none;
				}

				/* Row styles */
				#categoryTable tbody tr {
					border-bottom: 1px solid #eee;
				}

				/* Cell styles */
				#categoryTable td {
					padding: 12px 15px;
					color: #666;
				}

				#categoryTable tbody tr:hover {
					background-color: #f5f5f5 !important;
				}
			</style>

