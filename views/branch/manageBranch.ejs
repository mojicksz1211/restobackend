<!-- BRANCH MANAGEMENT PAGE -->
<!-- File: views/branch/manageBranch.ejs -->
<!-- Description: Main page for managing branches (Admin only) -->
<!-- ============================================ -->

<%- include('../partials/header') %>
<%- include('../partials/loader') %>
  <%- include('../partials/sidebar') %>
    <%- include('../partials/topbar') %>

    <div class="container-fluid content-inner mt-4">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h3 class="card-title">
                <div class="breadcrumb1 flat">
                  <a href="/dashboard"><span class="fa fa-home"></span></a>
                  <a href="/branch/manage" class="active"><%= __('branch.manage_branches') %></a>
                </div>
              </h3>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-new_branch">
                <i class="fa fa-plus" aria-hidden="true"></i> <%= __('branch.new_branch') %>
              </button>
            </div>

            <div class="card-body">
              <table id="branchTable" class="table nowrap small-text" style="width:100%">
                <thead>
                  <tr>
                    <th><%= __('branch.code') %></th>
                    <th><%= __('branch.name') %></th>
                    <th><%= __('branch.address') %></th>
                    <th><%= __('branch.phone') %></th>
                    <th><%= __('branch.status') %></th>
                    <th><%= __('branch.action') %></th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- New Branch Modal -->
    <div class="modal fade" id="modal-new_branch" role="dialog" aria-hidden="true" data-bs-backdrop="static">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header bg-primary">
            <h5 class="block-title text-white mb-0"><%= __('modal_new_branch.new_branch') %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="formNewBranch">
            <div class="modal-body">
              <div class="mb-2">
                <label class="form-label"><%= __('modal_new_branch.branch_code') %></label>
                <input type="text" class="form-control" name="BRANCH_CODE" required />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_new_branch.branch_name') %></label>
                <input type="text" class="form-control" name="BRANCH_NAME" required />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_new_branch.address') %></label>
                <input type="text" class="form-control" name="ADDRESS" />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_new_branch.phone') %></label>
                <input type="text" class="form-control" name="PHONE" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-sm btn-primary"><%= __('modal_new_branch.save') %></button>
              <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal"><%= __('modal_new_branch.close') %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Branch Modal -->
    <div class="modal fade" id="modal-edit_branch" role="dialog" aria-hidden="true" data-bs-backdrop="static">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header bg-info">
            <h5 class="block-title text-white mb-0"><%= __('modal_edit_branch.edit_branch') %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="formEditBranch">
            <input type="hidden" id="edit_branch_id" />
            <div class="modal-body">
              <div class="mb-2">
                <label class="form-label"><%= __('modal_edit_branch.branch_code') %></label>
                <input type="text" class="form-control" id="edit_branch_code" required />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_edit_branch.branch_name') %></label>
                <input type="text" class="form-control" id="edit_branch_name" required />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_edit_branch.address') %></label>
                <input type="text" class="form-control" id="edit_branch_address" />
              </div>
              <div class="mb-2">
                <label class="form-label"><%= __('modal_edit_branch.phone') %></label>
                <input type="text" class="form-control" id="edit_branch_phone" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-sm btn-info text-white"><%= __('modal_edit_branch.save_changes') %></button>
              <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal"><%= __('modal_edit_branch.close') %></button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <!-- Translations passed via data attribute to avoid linter issues -->
    <div id="branchTranslations" 
      data-success="<%- __('branch.success') %>"
      data-error="<%- __('branch.error') %>"
      data-branch-created-successfully="<%- __('branch.branch_created_successfully') %>"
      data-branch-updated-successfully="<%- __('branch.branch_updated_successfully') %>"
      data-branch-deleted-successfully="<%- __('branch.branch_deleted_successfully') %>"
      data-failed-to-create-branch="<%- __('branch.failed_to_create_branch') %>"
      data-failed-to-update-branch="<%- __('branch.failed_to_update_branch') %>"
      data-failed-to-delete-branch="<%- __('branch.failed_to_delete_branch') %>"
      data-delete-confirmation-text="<%- __('branch.delete_confirmation_text') %>"
      data-active="<%- __('branch.active') %>"
      data-inactive="<%- __('branch.inactive') %>"
      data-edit="<%- __('branch.edit') %>"
      data-delete="<%- __('branch.delete') %>"
      data-pagination-showing="<%- __('branch.pagination.showing') %>"
      data-pagination-to="<%- __('branch.pagination.to') %>"
      data-pagination-of="<%- __('branch.pagination.of') %>"
      data-pagination-entries="<%- __('branch.pagination.entries') %>"
      data-pagination-previous="<%- __('branch.pagination.previous') %>"
      data-pagination-next="<%- __('branch.pagination.next') %>"
      data-pagination-search="<%- __('branch.pagination.search') %>"
      data-pagination-search-placeholder="<%- __('branch.pagination.search_placeholder') %>"
      style="display: none;"></div>

    <script>
      (function () {
        const tableEl = document.getElementById('branchTable');
        const formNew = document.getElementById('formNewBranch');
        const formEdit = document.getElementById('formEditBranch');
        const editModalEl = document.getElementById('modal-edit_branch');
        const newModalEl = document.getElementById('modal-new_branch');
        const editModalInstance = () => bootstrap.Modal.getOrCreateInstance(editModalEl);
        const newModalInstance = () => bootstrap.Modal.getOrCreateInstance(newModalEl);
        const branchMap = new Map();
        
        // Get translations from data attributes
        const translations = document.getElementById('branchTranslations');
        const getTranslation = (key) => {
          if (!translations) return '';
          const value = translations.getAttribute(`data-${key}`);
          return value !== null ? value : '';
        };

        // Get pagination translations
        const paginationShowing = getTranslation('pagination-showing') || 'Showing';
        const paginationTo = getTranslation('pagination-to') || 'to';
        const paginationOf = getTranslation('pagination-of') || 'of';
        const paginationEntries = getTranslation('pagination-entries') || 'entries';
        const paginationPrevious = getTranslation('pagination-previous') || 'Previous';
        const paginationNext = getTranslation('pagination-next') || 'Next';
        const paginationSearch = getTranslation('pagination-search') || 'Search:';
        const paginationSearchPlaceholder = getTranslation('pagination-search-placeholder') || 'Search...';

        function showAlert(message, type = 'success') {
          if (window.Swal && typeof Swal.fire === 'function') {
            Swal.fire({ icon: type, text: message, toast: true, position: 'top-end', timer: 3000, showConfirmButton: false });
          } else {
            console[type === 'error' ? 'error' : 'log'](message);
          }
        }

        function handleResponse(response) {
          return response.json().then(json => {
            if (!response.ok || !json || json.success === false) {
              const errorMessage = (json && (json.error || json.message || json.details)) || 'Request failed';
              throw new Error(errorMessage);
            }
            return json;
          });
        }

        const branchTable = $(tableEl).DataTable({
          responsive: true,
          processing: true,
          lengthChange: false,
          language: {
            search: paginationSearch,
            searchPlaceholder: paginationSearchPlaceholder,
            lengthMenu: '',
            info: paginationShowing + ' _START_ ' + paginationTo + ' _END_ ' + paginationOf + ' _TOTAL_ ' + paginationEntries,
            infoEmpty: paginationShowing + ' 0 ' + paginationTo + ' 0 ' + paginationOf + ' 0 ' + paginationEntries,
            infoFiltered: '(' + paginationShowing + ' _MAX_ ' + paginationEntries + ')',
            paginate: {
              previous: paginationPrevious,
              next: paginationNext
            }
          },
          ajax: {
            url: '/branch',
            method: 'GET',
            dataSrc: ''
          },
          columns: [
            { data: 'BRANCH_CODE', defaultContent: '—' },
            { data: 'BRANCH_NAME', defaultContent: '—' },
            { data: 'ADDRESS', defaultContent: '—' },
            { data: 'PHONE', defaultContent: '—' },
            {
              data: 'ACTIVE',
              orderable: false,
              searchable: false,
              className: 'text-center align-middle',
              render: function (data) {
                const active = getTranslation('active');
                const inactive = getTranslation('inactive');
                return parseInt(data) === 1
                  ? '<span class="badge bg-success">' + active + '</span>'
                  : '<span class="badge bg-secondary">' + inactive + '</span>';
              }
            },
            {
              data: null,
              orderable: false,
              searchable: false,
              className: 'text-center align-middle',
              render: function (data) {
                const id = data.IDNo || '';
                const editText = getTranslation('edit');
                const deleteText = getTranslation('delete');
                return `
                  <div class="d-flex justify-content-center gap-1 flex-wrap">
                    <button type="button" class="btn btn-sm btn-info" data-action="edit" data-id="${id}" aria-label="${editText}">
                      <i class="fa fa-pencil-alt"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" data-action="delete" data-id="${id}" aria-label="${deleteText}">
                      <i class="fa fa-trash"></i>
                    </button>
                  </div>
                `;
              }
            }
          ],
          order: [[1, 'asc']]
        });

        $(tableEl).on('xhr.dt', function (event, settings, json) {
          branchMap.clear();
          (json || []).forEach(row => branchMap.set(String(row.IDNo), row));
        });

        formNew.addEventListener('submit', function (e) {
          e.preventDefault();
          const payload = Object.fromEntries(new FormData(formNew).entries());
          fetch('/branch', {
            method: 'POST',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          })
            .then(handleResponse)
            .then(() => {
              formNew.reset();
              newModalInstance().hide();
              branchTable.ajax.reload(null, false);
              showAlert(getTranslation('branch-created-successfully'));
            })
            .catch(err => {
              showAlert(err.message || getTranslation('failed-to-create-branch'), 'error');
            });
        });

        $(tableEl).on('click', 'button[data-action="edit"]', function () {
          const id = $(this).data('id');
          const branch = branchMap.get(String(id));
          if (!branch) {
            return;
          }
          document.getElementById('edit_branch_id').value = branch.IDNo;
          document.getElementById('edit_branch_code').value = branch.BRANCH_CODE || '';
          document.getElementById('edit_branch_name').value = branch.BRANCH_NAME || '';
          document.getElementById('edit_branch_address').value = branch.ADDRESS || '';
          document.getElementById('edit_branch_phone').value = branch.PHONE || '';
          editModalInstance().show();
        });

        formEdit.addEventListener('submit', function (e) {
          e.preventDefault();
          const id = document.getElementById('edit_branch_id').value;
          const payload = {
            BRANCH_CODE: document.getElementById('edit_branch_code').value,
            BRANCH_NAME: document.getElementById('edit_branch_name').value,
            ADDRESS: document.getElementById('edit_branch_address').value,
            PHONE: document.getElementById('edit_branch_phone').value
          };
          fetch(`/branch/${encodeURIComponent(id)}`, {
            method: 'PUT',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          })
            .then(handleResponse)
            .then(() => {
              editModalInstance().hide();
              branchTable.ajax.reload(null, false);
              showAlert(getTranslation('branch-updated-successfully'));
            })
            .catch(err => {
              showAlert(err.message || getTranslation('failed-to-update-branch'), 'error');
            });
        });

        $(tableEl).on('click', 'button[data-action="delete"]', function () {
          const id = $(this).data('id');
          if (!id) {
            return;
          }
          if (!confirm(getTranslation('delete-confirmation-text'))) {
            return;
          }
          fetch(`/branch/${encodeURIComponent(id)}`, {
            method: 'DELETE',
            credentials: 'include'
          })
            .then(handleResponse)
            .then(() => {
              branchTable.ajax.reload(null, false);
              showAlert(getTranslation('branch-deleted-successfully'));
            })
            .catch(err => {
              showAlert(err.message || getTranslation('failed-to-delete-branch'), 'error');
            });
        });
      })();
    </script>
