<!-- ============================================ -->
<!-- BRANCH MANAGEMENT PAGE -->
<!-- File: views/branch/manageBranch.ejs -->
<!-- Description: Main page for managing branches (Admin only) -->
<!-- ============================================ -->

<%- include('../partials/header') %>
<%- include('../partials/loader') %>
  <%- include('../partials/sidebar') %>
    <%- include('../partials/topbar') %>

    <div class="container-fluid content-inner mt-4">
      <div class="row">
        <div class="col-sm-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h3 class="card-title">
                <div class="breadcrumb1 flat">
                  <a href="/dashboard"><span class="fa fa-home"></span></a>
                  <a href="/branch/manage" class="active">Manage Branches</a>
                </div>
              </h3>
              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-new_branch">
                <i class="fa fa-plus" aria-hidden="true"></i> New Branch
              </button>
            </div>

            <div class="card-body">
              <table id="branchTable" class="table nowrap small-text" style="width:100%">
                <thead>
                  <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- New Branch Modal -->
    <div class="modal fade" id="modal-new_branch" role="dialog" aria-hidden="true" data-bs-backdrop="static">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header bg-primary">
            <h5 class="block-title text-white mb-0">New Branch</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="formNewBranch">
            <div class="modal-body">
              <div class="mb-2">
                <label class="form-label">Branch Code</label>
                <input type="text" class="form-control" name="BRANCH_CODE" required />
              </div>
              <div class="mb-2">
                <label class="form-label">Branch Name</label>
                <input type="text" class="form-control" name="BRANCH_NAME" required />
              </div>
              <div class="mb-2">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" name="ADDRESS" />
              </div>
              <div class="mb-2">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" name="PHONE" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-sm btn-primary">Save</button>
              <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Edit Branch Modal -->
    <div class="modal fade" id="modal-edit_branch" role="dialog" aria-hidden="true" data-bs-backdrop="static">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header bg-info">
            <h5 class="block-title text-white mb-0">Edit Branch</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form id="formEditBranch">
            <input type="hidden" id="edit_branch_id" />
            <div class="modal-body">
              <div class="mb-2">
                <label class="form-label">Branch Code</label>
                <input type="text" class="form-control" id="edit_branch_code" required />
              </div>
              <div class="mb-2">
                <label class="form-label">Branch Name</label>
                <input type="text" class="form-control" id="edit_branch_name" required />
              </div>
              <div class="mb-2">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" id="edit_branch_address" />
              </div>
              <div class="mb-2">
                <label class="form-label">Phone</label>
                <input type="text" class="form-control" id="edit_branch_phone" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-sm btn-info text-white">Save Changes</button>
              <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
      (function () {
        const tableEl = document.getElementById('branchTable');
        const formNew = document.getElementById('formNewBranch');
        const formEdit = document.getElementById('formEditBranch');
        const editModalEl = document.getElementById('modal-edit_branch');
        const newModalEl = document.getElementById('modal-new_branch');
        const editModalInstance = () => bootstrap.Modal.getOrCreateInstance(editModalEl);
        const newModalInstance = () => bootstrap.Modal.getOrCreateInstance(newModalEl);
        const branchMap = new Map();

        function showAlert(message, type = 'success') {
          if (window.Swal && typeof Swal.fire === 'function') {
            Swal.fire({ icon: type, text: message, toast: true, position: 'top-end', timer: 3000, showConfirmButton: false });
          } else {
            console[type === 'error' ? 'error' : 'log'](message);
          }
        }

        function handleResponse(response) {
          return response.json().then(json => {
            if (!response.ok || !json || json.success === false) {
              const errorMessage = (json && (json.error || json.message || json.details)) || 'Request failed';
              throw new Error(errorMessage);
            }
            return json;
          });
        }

        const branchTable = $(tableEl).DataTable({
          responsive: true,
          processing: true,
          lengthChange: false,
          ajax: {
            url: '/branch',
            method: 'GET',
            dataSrc: ''
          },
          columns: [
            { data: 'BRANCH_CODE', defaultContent: '—' },
            { data: 'BRANCH_NAME', defaultContent: '—' },
            { data: 'ADDRESS', defaultContent: '—' },
            { data: 'PHONE', defaultContent: '—' },
            {
              data: 'ACTIVE',
              orderable: false,
              searchable: false,
              className: 'text-center align-middle',
              render: function (data) {
                return parseInt(data) === 1
                  ? '<span class="badge bg-success">Active</span>'
                  : '<span class="badge bg-secondary">Inactive</span>';
              }
            },
            {
              data: null,
              orderable: false,
              searchable: false,
              className: 'text-center align-middle',
              render: function (data) {
                const id = data.IDNo || '';
                return `
                  <div class="d-flex justify-content-center gap-1 flex-wrap">
                    <button type="button" class="btn btn-sm btn-info" data-action="edit" data-id="${id}" aria-label="Edit">
                      <i class="fa fa-pencil-alt"></i>
                    </button>
                    <button type="button" class="btn btn-sm btn-danger" data-action="delete" data-id="${id}" aria-label="Delete">
                      <i class="fa fa-trash"></i>
                    </button>
                  </div>
                `;
              }
            }
          ],
          order: [[1, 'asc']]
        });

        $(tableEl).on('xhr.dt', function (event, settings, json) {
          branchMap.clear();
          (json || []).forEach(row => branchMap.set(String(row.IDNo), row));
        });

        formNew.addEventListener('submit', function (e) {
          e.preventDefault();
          const payload = Object.fromEntries(new FormData(formNew).entries());
          fetch('/branch', {
            method: 'POST',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          })
            .then(handleResponse)
            .then(() => {
              formNew.reset();
              newModalInstance().hide();
              branchTable.ajax.reload(null, false);
              showAlert('Branch created successfully');
            })
            .catch(err => {
              showAlert(err.message || 'Failed to create branch', 'error');
            });
        });

        $(tableEl).on('click', 'button[data-action="edit"]', function () {
          const id = $(this).data('id');
          const branch = branchMap.get(String(id));
          if (!branch) {
            return;
          }
          document.getElementById('edit_branch_id').value = branch.IDNo;
          document.getElementById('edit_branch_code').value = branch.BRANCH_CODE || '';
          document.getElementById('edit_branch_name').value = branch.BRANCH_NAME || '';
          document.getElementById('edit_branch_address').value = branch.ADDRESS || '';
          document.getElementById('edit_branch_phone').value = branch.PHONE || '';
          editModalInstance().show();
        });

        formEdit.addEventListener('submit', function (e) {
          e.preventDefault();
          const id = document.getElementById('edit_branch_id').value;
          const payload = {
            BRANCH_CODE: document.getElementById('edit_branch_code').value,
            BRANCH_NAME: document.getElementById('edit_branch_name').value,
            ADDRESS: document.getElementById('edit_branch_address').value,
            PHONE: document.getElementById('edit_branch_phone').value
          };
          fetch(`/branch/${encodeURIComponent(id)}`, {
            method: 'PUT',
            credentials: 'include',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          })
            .then(handleResponse)
            .then(() => {
              editModalInstance().hide();
              branchTable.ajax.reload(null, false);
              showAlert('Branch updated successfully');
            })
            .catch(err => {
              showAlert(err.message || 'Failed to update branch', 'error');
            });
        });

        $(tableEl).on('click', 'button[data-action="delete"]', function () {
          const id = $(this).data('id');
          if (!id) {
            return;
          }
          if (!confirm('Are you sure you want to delete this branch?')) {
            return;
          }
          fetch(`/branch/${encodeURIComponent(id)}`, {
            method: 'DELETE',
            credentials: 'include'
          })
            .then(handleResponse)
            .then(() => {
              branchTable.ajax.reload(null, false);
              showAlert('Branch deleted successfully');
            })
            .catch(err => {
              showAlert(err.message || 'Failed to delete branch', 'error');
            });
        });
      })();
    </script>
