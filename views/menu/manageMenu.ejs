<%- include('../partials/header') %>
<%- include('../partials/loader') %>
	<%- include('../partials/sidebar') %>

		<%- include('../partials/topbar') %>

			<div class="container-fluid content-inner mt-4">
				<div class="row">
					<div class="col-sm-12">
						<div class="card">
							<div class="card-header d-flex justify-content-between align-items-center">
								
								<h3 class="card-title"><div class="breadcrumb1 flat">
									<a href="/dashboard" ><span class="fa fa-home"></span></a>
									<a href="/manageMenu"class="active">Manage Menu</a>
								</div></h3>
									<div class="d-flex gap-2">
										<a href="/manageCategory" class="btn btn-primary">
											<i class="fa fa-tags" aria-hidden="true"></i> Manage Category
										</a>
										<button type="button" class="btn btn-primary" onclick="add_menu_modal()">
											<i class="fa fa-plus" aria-hidden="true"></i> New Menu
										</button>
									</div>
								
							</div>

							<!-- ============================================ -->
							<!-- FILTERS SECTION -->
							<!-- ============================================ -->
							<div class="card-body border-bottom bg-light py-2">
								<div class="row g-2 align-items-center">
									<div class="col-auto">
										<label class="form-label fw-bold mb-0" style="font-size: 12px;">Category:</label>
										<select class="form-control form-select form-select-sm" id="filter_category" style="width: 150px; font-size: 12px;">
											<option value="">All Categories</option>
										</select>
									</div>
									<div class="col-auto">
										<label class="form-label fw-bold mb-0" style="font-size: 12px;">Availability:</label>
										<select class="form-control form-select form-select-sm" id="filter_availability" style="width: 120px; font-size: 12px;">
											<option value="">All</option>
											<option value="1">Available</option>
											<option value="0">Not Available</option>
										</select>
									</div>
								</div>
							</div>

							<div class="card-body">
								<table id="menuTable" class="table  nowrap small-text" style="width:100%">
									<thead>
										<tr>
											<th class="d-none d-sm-table-cell">Image</th>
											<th class="d-none d-sm-table-cell">Menu Name</th>
											<th class="d-none d-sm-table-cell">Category</th>
											<th class="d-none d-sm-table-cell">Description</th>
											<th class="d-none d-sm-table-cell">Price</th>
											<th class="d-none d-sm-table-cell">Available</th>
											<th class="d-none d-sm-table-cell">Action</th>
										</tr>
									</thead>
									<tbody>

									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>


			<!-- ============================================ -->
			<!-- MODALS -->
			<!-- ============================================ -->
			<%- include ('../modals/menu/newMenu'); %>
			<%- include ('../modals/menu/editMenu'); %>

			<!-- ============================================ -->
			<!-- FOOTER -->
			<!-- ============================================ -->
			<%- include ('../partials/footer'); -%>

			<!-- ============================================ -->
			<!-- SCRIPTS -->
			<!-- ============================================ -->
			<script src="/assets/js/functions/manageMenu.js"></script>
						

						<script>
							$('.js-select2').select2({
								placeholder: 'Select an option',
								dropdownParent: '#modal-new_menu'
							});
						</script>

						<style>
							.card-body {
  overflow-x: auto;
}
#menuTable {
    width: 100%;
    font-size: 13px;
    border-collapse: collapse;
}

/* Header styles */
#menuTable thead th {
    background: var(--bs-primary-bg-subtle);
    color: var(--bs-primary);
    font-weight: 500;
    padding: 12px 15px;
    text-align: left;
    border: none;
}

/* Row styles */
	#menuTable tbody tr {
    border-bottom: 1px solid #eee;
}

/* Cell styles */
#menuTable td {
    padding: 12px 15px;
    color: #666;
}

#menuTable tbody tr:hover {
  background-color: #f5f5f5 !important;
}

/* Filter Section Styles */
.bg-light {
	background-color: #f8f9fa !important;
}

.border-bottom {
	border-bottom: 2px solid #dee2e6 !important;
}

.form-label.fw-bold {
	font-size: 12px;
	color: #495057;
	margin-bottom: 5px;
}

#filter_category,
#filter_availability {
	font-size: 12px;
}

/* Image Hover Preview Styles */
.menu-image-container {
	position: relative;
	display: inline-block;
	cursor: pointer;
}

.menu-thumbnail {
	width: 50px;
	height: 50px;
	object-fit: cover;
	border-radius: 4px;
	transition: transform 0.2s ease;
}

.menu-thumbnail:hover {
	transform: scale(1.1);
	box-shadow: 0 2px 8px rgba(0,0,0,0.2);
}

.menu-image-preview {
	position: fixed;
	z-index: 9999;
	display: none;
	background: white;
	border: 2px solid #ddd;
	border-radius: 8px;
	padding: 10px;
	box-shadow: 0 8px 24px rgba(0,0,0,0.25);
	width: 350px;
	height: 350px;
	pointer-events: none;
	opacity: 0;
	visibility: hidden;
}

.menu-image-preview.show {
	display: block;
	opacity: 1;
	visibility: visible;
	animation: fadeIn 0.2s ease;
}

.menu-image-preview img {
	width: 100%;
	height: 100%;
	object-fit: contain;
	border-radius: 4px;
	display: block;
}

@keyframes fadeIn {
	from {
		opacity: 0;
		transform: scale(0.9);
	}
	to {
		opacity: 1;
		transform: scale(1);
	}
}

</style>

