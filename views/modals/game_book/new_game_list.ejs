<div class="modal fade" id="modal-new-game-list" role="dialog" aria-labelledby="modal-default-popout" aria-hidden="true"
    data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-popout" role="document">
        <div class="modal-content">
            <div class="block block-rounded block-themed block-transparent mb-0">
                <div class="block-header bg-primary-dark">
                    <h3 class="block-title">New Game</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-fw fa-times"></i>
                        </button>
                    </div>
                </div>
                <form id="add_game_list">
                    <div class="block-content">

                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="txtGameNo" placeholder="GAME NO. " />
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <select class="select2 form-select" id="txtTrans" name="txtAccountCode" style="width: 100%;"
                                    data-placeholder="Transaction">
                                    <option>--- Account Code ---</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <input type="number" class="form-control" name="txtAmount" placeholder="Amount" />
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <input type="number" class="form-control" name="txtChips" placeholder="Working Chips" />
                            </div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <select class="select2 form-select" name="txtCommision" style="width: 100%;"
                                    data-placeholder="Transaction">
                                    <option selected disabled>--- Commission Type ---</option>
                                    <option value="1">Rolling Game (1.5%)</option>
                                    <option value="2">Shared Game</option>
                                    <option value="3">Loosing Game</option>
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="block-content block-content-full text-end bg-body">
                        <button type="submit" class="btn btn-sm btn-primary" data-bs-dismiss="modal">
                            Save
                        </button>
                        <button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
                            Close
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>