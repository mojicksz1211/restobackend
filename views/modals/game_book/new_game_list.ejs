<div class="modal fade" id="modal-new-game-list" role="dialog" aria-labelledby="modal-default-popout" aria-hidden="true"
	data-keyboard="false" data-bs-backdrop="static">
	<div class="modal-dialog modal-dialog-centered xl" role="document">
		<div class="modal-content">
			<div class="block block-rounded block-themed block-transparent mb-0">
				<div class="block-header bg-primary-dark">
					<h3 class="block-title">New Game</h3>
					<div class="block-options">
						<button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
							<i class="fa fa-fw fa-times"></i>
						</button>
					</div>
				</div>
				<form id="add_game_list">
					<div class="block-content">

						<!-- <div class="row mb-2">
							<div class="col-sm-12">
								<input type="text" class="form-control" name="txtGameNo" placeholder="GAME NO. " />
							</div>
						</div> -->

						<div class="row mb-2">
							<div class="col-sm-12">
								<select class="js-select2 form-select" id="txtTrans" name="txtAccountCode" style="width: 100%;"
									data-placeholder="Choose an account...">
								</select>
							</div>
						</div>

						<div class="row mb-2">
							<!-- <div class="col-sm-4">
								<input type="number" class="form-control" name="txtAmount" placeholder="Buy in amount" />
							</div> -->
							<div class="col-sm-4">
								<select class="js-select2 form-select" name="txtTransType" style="width: 100%;"
									data-placeholder="Choose...">
									<option></option>
									<option value="1">Cash</option>
									<option value="2">Deposit</option>
									<option value="3">Marker</option>
								</select>
							</div>

							<div class="col-sm-4">
								<input type="text" onkeypress="return onlyNumberKey(event)" data-type="number" class="form-control" name="txtNN" placeholder="NN Chips" />
							</div>

							<div class="col-sm-4">
								<input type="text" onkeypress="return onlyNumberKey(event)" data-type="number" class="form-control" name="txtCC" placeholder="CC Chips" />
							</div>
						</div>

						<div class="row mb-2">
							<div class="col-sm-4">
								<input type="text" onkeypress="return onlyNumberKey(event)" data-type="number" class="form-control" name="txtChips" placeholder="Working Chips" />
							</div>

							<div class="col-sm-5">
								<select class="js-select2 form-select" name="txtCommisionType" style="width: 100%;"
									data-placeholder="Choose a game...">
									<option></option>
									<option value="1">Rolling Game</option>
									<option value="2">Shared Game</option>
									<option value="3">Loosing Game</option>
								</select>
							</div>

							<div class="col-sm-3">
								<input type="number" class="form-control" step="any" name="txtCommisionRate" placeholder="%" />
							</div>
						</div>
					</div>
					<div class="block-content block-content-full text-end bg-body">
						<button type="submit" class="btn btn-sm btn-primary" data-bs-dismiss="modal">
							Save
						</button>
						<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">
							Close
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>