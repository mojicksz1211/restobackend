<!-- NEW MENU MODAL -->
<!-- File: views/modals/menu/newMenu.ejs -->
<!-- Description: Modal form for creating new menu item -->
<!-- ============================================ -->

<div class="modal fade" id="modal-new_menu" role="dialog" aria-labelledby="modal-default-popout" aria-hidden="true"
	data-keyboard="false" data-bs-backdrop="static">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
		<div class="modal-content">


			<div class="modal-header bg-primary">

				<h5 class="block-title text-white">New Menu</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>


			<div class="modal-body">
				<form id="add_new_menu">
					<div class="row mb-2">
						<div class="col-sm-12">
							<label class="form-label">Category</label>
							<select class="form-control js-select2" id="category_id" name="CATEGORY_ID" style="width: 100%;"
								data-placeholder="Choose category..">
								<option></option>
							</select>
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-sm-12">
							<label class="form-label">Menu Name</label>
							<input type="text" class="form-control" name="MENU_NAME" placeholder="Enter menu name" required>
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-sm-12">
							<label class="form-label">Description</label>
							<textarea class="form-control" name="MENU_DESCRIPTION" placeholder="Enter menu description" rows="3"></textarea>
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-sm-12">
							<label class="form-label">Menu Image</label>
							<input type="file" class="form-control" name="MENU_IMG" id="menu_image" accept="image/*" onchange="previewImage(this, 'preview_new')">
							<small class="text-muted">Accepted formats: JPG, PNG, GIF (Max: 5MB)</small>
							<div class="mt-2" id="preview_new" style="display: none;">
								<img id="preview_img_new" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 4px; border: 1px solid #ddd;">
							</div>
						</div>
					</div>
					<div class="row mb-2">
						<div class="col-sm-6">
							<label class="form-label">Price</label>
							<input type="number" class="form-control" name="MENU_PRICE" placeholder="0.00" step="0.01" min="0" value="0">
						</div>
						<div class="col-sm-6">
							<label class="form-label">Available</label>
							<select class="form-control" name="IS_AVAILABLE">
								<option value="1">Yes</option>
								<option value="0">No</option>
							</select>
						</div>
					</div>
			</div>
					<div class="modal-footer">
						<button type="submit" class="btn btn-sm btn-primary" data-bs-dismiss="modal">Save</button>
						<button type="button" class="btn btn-sm btn-alt-secondary" data-bs-dismiss="modal">Close</button>
					</div>
			</form>
		</div>
	</div>
</div>


